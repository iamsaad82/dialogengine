# Basis-URL
NEXTAUTH_URL="https://dialog-engine.onrender.com"

# API-Konfiguration
NEXT_PUBLIC_API_URL="https://dialog-engine.onrender.com"

# Datenbank
DATABASE_URL="postgresql://user:password@localhost:5432/dialogengine"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED=true

# OpenAI
OPENAI_API_KEY="your-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"

# Pinecone
PINECONE_API_KEY="your-api-key"
PINECONE_ENVIRONMENT="gcp-starter"
PINECONE_INDEX="dialog-engine"

# Auth
NEXTAUTH_SECRET="your-secret-key"
AUTH_GITHUB_ID="your-github-id"
AUTH_GITHUB_SECRET="your-github-secret"

# Storage
STORAGE_BUCKET="dialogengine-prod"
STORAGE_REGION="eu-central-1"

# Monitoring
LOG_LEVEL="info"
ENABLE_API_LOGGING=true

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_REDIS_CACHE=true
ENABLE_RATE_LIMITING=true

# Anthropic (für Claude)
ANTHROPIC_API_KEY=""

# Redis (für Caching)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Default Template
DEFAULT_TEMPLATE_ID="default"

# Firecrawl
FIRECRAWL_API_KEY="" 