# Umgebung
NODE_ENV="development" # oder "production"

# Basis-URLs
NEXTAUTH_URL="http://localhost:3000" # Prod: "https://dialog-engine.onrender.com"
NEXT_PUBLIC_API_URL="http://localhost:3000" # Prod: "https://dialog-engine.onrender.com"

# Datenbank (Development)
DATABASE_URL="postgresql://user:password@localhost:5432/database"

# Datenbank (Production - Neon)
POSTGRES_PRISMA_URL="postgres://user:pass@your-neon-url/neondb?pgbouncer=true&connect_timeout=15&sslmode=require"
POSTGRES_URL_NON_POOLING="postgres://user:pass@your-neon-url/neondb?sslmode=require"

# Redis (Development)
REDIS_URL="redis://localhost:6379"
REDIS_ENABLED=true

# Redis (Production - Upstash)
UPSTASH_REDIS_REST_URL="your-upstash-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Shared Services (Development & Production)
# OpenAI
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4-turbo-preview"

# Anthropic
ANTHROPIC_API_KEY=""

# Pinecone
PINECONE_API_KEY="your-shared-api-key"
PINECONE_ENVIRONMENT="gcp-starter"
PINECONE_INDEX="dialog-engine"

# Auth
NEXTAUTH_SECRET="your-secret-key"
AUTH_GITHUB_ID="your-github-id"
AUTH_GITHUB_SECRET="your-github-secret"

# Storage
STORAGE_BUCKET="dialogengine-dev" # Prod: "dialogengine-prod"
STORAGE_REGION="eu-central-1"

# Monitoring
LOG_LEVEL="debug" # Prod: "info"
ENABLE_API_LOGGING=true

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_REDIS_CACHE=true
ENABLE_RATE_LIMITING=true

# Default Template
DEFAULT_TEMPLATE_ID="default"

# Firecrawl
FIRECRAWL_API_KEY="your-shared-api-key"

# Mistral
MISTRAL_API_KEY="your-mistral-api-key" 